<!-- Toast de boas-vindas -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
  <div id="welcomeToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
        游녦 Bem-vindo(a), <strong>{{user.displayName}}</strong>!
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Fechar"></button>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Se o template recebeu um usu치rio ({{user}} existe)
    const hasUser = {{#if user}}true{{else}}false{{/if}};
    if (hasUser) {
      // Exibe o toast apenas na primeira visita ap칩s login
      if (!sessionStorage.getItem('toastShown')) {
        const toastEl = document.getElementById('welcomeToast');
        const toast = new bootstrap.Toast(toastEl, { delay: 4000 });
        toast.show();
        sessionStorage.setItem('toastShown', 'true');
      }
    } else {
      // Reseta para mostrar novamente no pr칩ximo login
      sessionStorage.removeItem('toastShown');
    }
  });
  
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const logoutBtn = document.getElementById('logoutBtn');
    if (logoutBtn) {
      logoutBtn.addEventListener('click', async () => {
        try {
          const res = await fetch('/api/auth/logout', { method: 'POST' });
          if (res.ok) {
            // Marca que o usu치rio acabou de sair
            sessionStorage.setItem('logoutToast', 'true');
            // Limpa o toast de login
            sessionStorage.removeItem('toastShown');
            // Redireciona para login
            window.location.href = '/login';
          } else {
            alert('Erro ao sair da conta.');
          }
        } catch (err) {
          console.error('Erro no logout:', err);
        }
      });
    }
  });
</script>

    
